  .row
    .box-3
      .section.removePadding
        #noContent
          p Looks like you aren't a tutor yet!
          a(class = "button" href='/becomeTutor' id = "BecomeTutor") Become a Tutor
        #yesContent
          h2 YOUR SUBJECTS
          .center
            if (subjects instanceof Array)
              for subject in subjects
                h3= subject
            else 
              h3= subjects
    .box-4
      .section.dashboard
        form#submitForm(method="post" action="messages")
          input(name="newTutor" value=false style="display:none")
          a(class="button" id="messagesBtn" href="javascript:{}" onclick="document.getElementById('submitForm').submit();") Messages
  form#signupformA(action='logout' method='post')
    .button(id = "fixedButton")
      input(type='submit' value='Logout')

script.
  var is_tutor = false;
  var userType = !{JSON.stringify(userType)}
  if (userType == "Registered Tutor") {
    is_tutor = true;
  }
  console.log (is_tutor)
  if (is_tutor) {
    document.getElementById("noContent").style.display = "none";
    document.getElementById("yesContent").style.display = "block";
  } else {
    document.getElementById("noContent").style.display = "block";
    document.getElementById("yesContent").style.display = "none";
  }

  var dropdownContent = document.getElementById("dropdown-content");
  var tutorSubjects = !{JSON.stringify(tutorSubjects)}
  var subjectForm = document.getElementById("subjectForm");
  var inputTextField = document.getElementById("chooseSubjectText");
  tutorSubjects.forEach(function(subject) {
    var a = document.createElement('a');
    a.value = subject;
    a.appendChild(document.createTextNode(subject));
    a.addEventListener("click", function(){ 
      inputTextField.setAttribute("value", ''); 
      inputTextField.setAttribute("value", a.value); 
      subjectForm.submit();
    });
    dropdownContent.appendChild(a)
  })


